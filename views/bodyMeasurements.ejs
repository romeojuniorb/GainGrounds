<% layout('layouts/boilerplate')%>

<form action="/bodyMeasurements" method="POST" class="validated-form" novalidate>
  <div class="card">
    <div class="card-body">
      <h2 class="text-center mb-3">Enter Body Measurements</h2>

      <div class="form-group">
        <input
          class="form-field"
          type="number"
          id="weight"
          name="weight"
          placeholder=" "
          required
        />
        <label class="form-label" for="weight">Enter weight (in lbs):</label>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="form-group">
        <input
          class="form-field"
          type="number"
          id="height"
          name="height"
          placeholder=" "
          required
        />
        <label class="form-label" for="height">Enter height (in cm): </label>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="form-group">
        <input
          type="date"
          class="form-control"
          id="date"
          name="date"
          required
        />
      </div>
      <div class="text-center mt-4">
        <button type="submit" class="btn btn-success">Submit</button>
      </div>
    </div>
  </div>
</form>
