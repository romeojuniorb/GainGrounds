<% layout('/layouts/boilerplate')%>

<div class="card">
  <div class="card-body">
    <div class="text-center mb-3">
      <h3 class="mb-3 mt-3">Welcome!</h3>
      <h5 class="text-muted">Log in to Gain Grounds to continue</h5>
    </div>
    <form action="/register" method="POST" class="validated-form" novalidate>
      <div class="form-group">
        <input
          class="form-field"
          type="text"
          id="username"
          name="username"
          placeholder=" "
          required
        />
        <label class="form-label" for="username">Username</label>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="form-group">
        <input
          class="form-field"
          type="email"
          id="email"
          name="email"
          placeholder=" "
          required
        />
        <label class="form-label" for="email">Email</label>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="form-group">
        <input
          class="form-field"
          type="password"
          id="password"
          name="password"
          placeholder=" "
          required
        />
        <label class="form-label" for="password">Password</label>
        <div class="valid-feedback">Looks good!</div>
      </div>
      <div class="text-center">
        <button class="btn btn-success">Register</button>
      </div>
      <div class="login-alt">
        <div></div>
        <span>OR</span>
        <div></div>
      </div>
    </form>
  </div>
</div>
